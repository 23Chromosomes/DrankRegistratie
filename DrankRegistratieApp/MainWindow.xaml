<Window x:Class="DrankRegistratieApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrankRegistratieApp"
        mc:Ignorable="d"
        Title="DankRegistratieApp" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="Pictures/DrankBG.jpg"/>
    </Window.Background>
    <Grid>
        <TextBlock TextWrapping="Wrap" Background="#7F000000" Foreground="White" FontSize="36" FontWeight="Bold" TextDecorations="Underline" TextAlignment="Center" HorizontalAlignment="Left" Width="792" Height="52" VerticalAlignment="Top"><Run Text="Dranken Registratie"/></TextBlock>
        <Grid x:Name="MainGrid" HorizontalAlignment="Left" Height="367" Margin="0,52,0,0" VerticalAlignment="Top" Width="792"/>
        <Button x:Name="DrankMenuBtn" Content="Dranken" BorderBrush="Black" Background="#7F002FD1" Height="52" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Click="DrankMenuBtn_Click" Foreground="White" FontWeight="Bold"/>

    </Grid>
</Window>
